        <script src="/socket.io/socket.io.js"></script>
        <script src="/js/rockpaperscissors.js"></script>
        <script>
         var socket = io();

         var container = document.getElementById('container');
         var resultPanel = Elm.RockPaperScissors.ResultPanel.embed(container, {
             'gameId': '{{ gameId }}',
             'playerId': '{{ playerId }}',
             'choice' : '{{ choice }}'
         });

